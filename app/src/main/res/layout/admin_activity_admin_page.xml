<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/adminListPage">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <soup.neumorphism.NeumorphImageView
            style="@style/Widget.Neumorph.ImageView"
            android:id="@+id/backBtn"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:padding="20dp"
            android:layout_gravity="start"
            android:src="@drawable/back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/adminList_title"
            android:textSize="42sp"
            android:textStyle="bold"
            android:textColor="@color/mainText"
            android:layout_marginStart="20dp"
            android:layout_gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <soup.neumorphism.NeumorphCardView
            style="@style/Widget.Neumorph.CardView"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/editTextSearchAdminField"
            android:layout_weight="6"
            android:padding="15dp"
            app:neumorph_shapeType="pressed">
            <EditText
                android:id="@+id/input_searchId"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@android:color/transparent"
                android:fontFamily="@font/nanumgothicregular"
                android:hint="@string/searchAdminIdHint"
                android:autofillHints="Admin ID"
                android:inputType="text"
                android:padding="10dp"
                android:textColor="@color/mainText"
                android:textSize="15sp" />
        </soup.neumorphism.NeumorphCardView>
        <soup.neumorphism.NeumorphButton
            style="@style/Widget.Neumorph.Button"
            android:id="@+id/adminSearchBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/search"
            android:padding="0dp"
            android:textSize="20sp" />
    </LinearLayout>
    <soup.neumorphism.NeumorphCardView
        style="@style/Widget.Neumorph.CardView"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/adminListCardView"
        android:gravity="center"
        android:padding="30dp"
        app:neumorph_shapeType="pressed">
        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </soup.neumorphism.NeumorphCardView>
</LinearLayout>