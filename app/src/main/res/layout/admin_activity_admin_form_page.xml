<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/adminFormPage"
    android:orientation="vertical">
    <soup.neumorphism.NeumorphImageView
        style="@style/Widget.Neumorph.ImageView"
        android:id="@+id/backBtn"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:padding="20dp"
        android:layout_gravity="start"
        android:src="@drawable/back"/>
    <soup.neumorphism.NeumorphCardView
        style="@style/Widget.Neumorph.CardView"
        android:id="@+id/adminAddCardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="30dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/admin_form_title"
                android:textColor="@color/mainText"
                android:textSize="42sp"
                android:textStyle="bold"/>
            <soup.neumorphism.NeumorphCardView
                style="@style/Widget.Neumorph.CardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editTextIdField"
                android:padding="25dp">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:id="@+id/input_adminId"
                    android:padding="15dp"
                    android:autofillHints="Admin ID"
                    android:hint="@string/admin_form_editTextIdField"
                    android:inputType="text"
                    android:textColor="@color/mainText" />
            </soup.neumorphism.NeumorphCardView>
            <soup.neumorphism.NeumorphCardView
                style="@style/Widget.Neumorph.CardView"
                android:id="@+id/editTextPwField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="25dp">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:id="@+id/input_adminPW"
                    android:padding="15dp"
                    android:autofillHints="Admin PW"
                    android:hint="@string/admin_form_editTextPwField"
                    android:inputType="textPassword"
                    android:textColor="@color/mainText" />
            </soup.neumorphism.NeumorphCardView>
            <soup.neumorphism.NeumorphCardView
                style="@style/Widget.Neumorph.CardView"
                android:id="@+id/editTextPositionField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="25dp">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:id="@+id/input_adminPosition"
                    android:padding="15dp"
                    android:autofillHints="Admin Position"
                    android:hint="@string/admin_form_editTextPositionField"
                    android:inputType="text"
                    android:textColor="@color/mainText" />
            </soup.neumorphism.NeumorphCardView>
            <soup.neumorphism.NeumorphButton
                style="@style/Widget.Neumorph.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="Admin Register Btn"
                android:hint="@string/admin_form_adminAddBtn"
                android:textStyle="bold"
                android:id="@+id/adminAddBtn"/>
        </LinearLayout>
    </soup.neumorphism.NeumorphCardView>
</LinearLayout>